<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppSofom" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/CIBBlueHeavy</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/CIBBlueLow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppSofom.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppSofom.InputLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spinner</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spinner</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spinner</item>
    </style>

    <style name="Theme.AppSofom.EditTextHint" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="colorControlActivated">@color/CIBBlueHeavy</item>
    </style>

    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spinner</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spinner</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spinner</item>
    </style>



    <style name="Theme.AppSofom.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppSofom.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>